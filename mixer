setCps(140/60/4)

// SLIDER DEFINITIONS
// ------------------

const BASS_LPF = slider(230, 100, 2000, 1)

const BASS_LPENV = slider(3, 0, 8,0.5)

const BASS_LPQ = slider(12, 1, 40, 1)

// PATTERN
// -------
$bass: n(irand(10).sub(7).seg(16)).scale("c:minor")
.s("sawtooth")
  // Use the LPF Cutoff slider
  .lpf(BASS_LPF)
  // Use the LPF Envelope Depth slider
  .lpenv(BASS_LPENV)
  // Use the LPF Resonance slider
  .lpq(BASS_LPQ)
._pianoroll()
